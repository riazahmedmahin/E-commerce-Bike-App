    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="760dp"
        android:background="@drawable/input_bg"
        android:text="back"
        android:id="@+id/token"/>
